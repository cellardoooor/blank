# Yandex Cloud Credentials
yc_cloud_id  = "YOUR_CLOUD_ID"
yc_folder_id = "YOUR_FOLDER_ID"
yc_token     = "YOUR_YC_OAUTH_TOKEN_HERE"

# Domain Configuration
domain = "messenger.example.com"

# Docker Image
docker_image = "cellardooor/blank:latest"

# Application Secrets (обязательно измените!)
jwt_secret  = "generate-with-openssl-rand-base64-32"
db_password = "strong-password-min-12-chars"

# Default User (optional)
default_user     = "admin"
default_password = "admin123"

# Application Configuration (можно оставить по умолчанию)
jwt_duration = "24h"

# Scaling Configuration
min_instances = 2
max_instances = 4

# Service Account (optional - will use default if not specified)
# service_account_id = "YOUR_SERVICE_ACCOUNT_ID"

# Certificate (optional - for imported certificate instead of Let's Encrypt)
# certificate_id = "YOUR_CERTIFICATE_ID"
